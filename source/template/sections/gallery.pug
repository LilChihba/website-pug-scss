- var img1 = 1
gallery.blockGallery
    .blockGallery__info
        img.TitleFrame(src="images/TitleFrame.png")
        h1 GALLERY
    while img1 < 19
        div.inline-block__gallery(class="qwer" + img1)
            img.gallery__image(src="images/gallery-" + img1 + ".png")
            a(href="#")
                img.hover__gallery_1(src="images/zoom.png")
            a(href="#")
                img.hover__gallery_2(src="images/link.png")
            a(href="#")
                img.hover__gallery_3(src="images/info.png")
            a(href="#")
                img.hover__gallery_4(src="images/like.png")
        - img1++;